    "instructions": [
        {
            "order": 1,
            "instruction": "Toast fennel seeds, cloves, and cardamom seeds in a small dry frying pan over medium-low heat for about 2 minutes until fragrant.",
            "time": "PT2M",
            "note": null
        },
        {
            "order": 2,
            "instruction": "Grind the toasted spices to a powder in a spice grinder or mortar and pestle. Add the ground cinnamon and curry powder and set aside.",
            "time": null,
            "note": null
        },
        {
            "order": 3,
            "instruction": "Heat 3 tablespoons of olive oil in a large sauté pan (about 26cm wide) over medium heat. Add mustard seeds and 10 curry leaves, cook until seeds begin to pop.",
            "time": "PT1M",
            "note": null
        },
        {
            "order": 4,
            "instruction": "Add onion and cook, stirring frequently, until starting to color.",
            "time": "PT7M",
            "note": null
        },
        {
            "order": 5,
            "instruction": "Add ginger, garlic, cilantro stalks, and fresh tomatoes. Cook for 5 minutes.",
            "time": "PT5M",
            "note": null
        },
        {
            "order": 6,
            "instruction": "Add the fennel spice mix and cook until fragrant.",
            "time": "PT2M",
            "note": null
        },
        {
            "order": 7,
            "instruction": "Add sambal oelek, canned tomatoes, tamarind, water, sugar, and 1¼ teaspoons of salt. Stir well and bring to a simmer. Reduce heat to medium-low and cook uncovered until thickened.",
            "time": "PT25M",
            "note": null
        },
        {
            "order": 8,
            "instruction": "Crack the eggs into the sambal, season with salt and pepper. Cover and cook until egg whites are fully cooked and yolks are soft.",
            "time": "PT8M",
            "note": null
        },
        {
            "order": 9,
            "instruction": "Heat remaining 1 tablespoon of oil in a small pan over medium heat. Add remaining curry leaves and cook until very fragrant.",
            "time": "PT1M",
            "note": null
        },
        {
            "order": 10,
            "instruction": "Drizzle the curry leaf oil over the eggs, scatter with cilantro leaves, and serve.",
            "time": null,
            "note": null
        }
    ],
